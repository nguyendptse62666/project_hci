<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:orientation="vertical"
    android:id="@+id/layoutResult">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <day01.nguyendpt.chidstudy.CustomControl.CoustomTextView
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtCategory"
            android:text="Chủ đề"
            android:fontFamily="@font/cupcake"
            android:textColor="@color/colorPrimaryButton"
            android:textSize="35dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textStyle="bold"
            app:outerShadowRadius="2dp"
            app:strokeColor="@color/colorWhite"
            app:strokeJoinStyle="bevel"
            app:strokeWidth="2dp"/>

        <day01.nguyendpt.chidstudy.CustomControl.CoustomTextView
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtVietName"
            android:text="Chủ đề"
            android:fontFamily="@font/cupcake"
            android:textColor="@color/colorDarkYellow"
            android:textSize="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textStyle="bold"
            app:outerShadowRadius="2dp"
            app:strokeColor="@color/colorWhite"
            app:strokeJoinStyle="bevel"
            app:strokeWidth="2dp"
            />
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="90dp"
            android:layout_gravity="center"
            android:id="@+id/imageQuestion"
            android:src="@drawable/animal_horse"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:paddingBottom="100dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:width="200dp"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:paddingLeft="45dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnResult"
            android:onClick="clickToSpeech"
            android:textColor="#DE7244"
            android:fontFamily="@font/cupcake"
            android:drawableRight="@drawable/button_icon_speaker"
            android:background="@drawable/button_shape_speak"
            android:paddingRight="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingBottom="70dp">

        <ImageView
            android:id="@+id/ImgKitty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/listen_kitty"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="10dp">
            <Button
                android:id="@+id/btnClickContinue"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/button_shape_circle"
                android:fontFamily="@font/montserrat_semi_bold"
                android:onClick="clickToContinue"
                android:drawableLeft="@drawable/next_arrow_icon"
                android:paddingLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="10dp">
            <Button
                android:id="@+id/btnClickNewTopic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/button_shape_circle"
                android:fontFamily="@font/montserrat_semi_bold"
                android:onClick="clickToChooseNewTopic"
                android:drawableLeft="@drawable/home_icon"
                android:paddingLeft="20dp"/>
        </LinearLayout>



    </LinearLayout>


</RelativeLayout>