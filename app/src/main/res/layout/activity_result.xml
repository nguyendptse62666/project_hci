<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:orientation="vertical"
    android:id="@+id/layoutResult">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <day01.nguyendpt.chidstudy.CustomControl.CoustomTextView
            android:layout_marginTop="20px"
            android:layout_marginHorizontal="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtCategory"
            android:text="Chủ đề"
            android:fontFamily="@font/cupcake"
            android:textColor="@color/colorPrimaryButton"
            android:textSize="23dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textStyle="bold"
            app:outerShadowRadius="2dp"
            app:strokeColor="@color/colorWhite"
            app:strokeJoinStyle="bevel"
            app:strokeWidth="2dp"/>

        <day01.nguyendpt.chidstudy.CustomControl.CoustomTextView
            android:layout_marginLeft="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtVietName"
            android:gravity="center"
            android:fontFamily="@font/cupcake"
            android:textColor="@color/colorDarkYellow"
            android:layout_gravity="center"
            android:text="Tên tiếng việt"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            app:outerShadowRadius="2dp"
            app:strokeColor="@color/colorWhite"
            app:strokeJoinStyle="bevel"
            app:strokeWidth="2dp"
            />
        <ImageView
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:id="@+id/imageQuestion"
            android:src="@drawable/animal_horse"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:paddingBottom="70dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:width="200dp"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:paddingLeft="45dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnResult"
            android:onClick="clickToSpeech"
            android:textColor="#DE7244"
            android:fontFamily="@font/cupcake"
            android:drawableRight="@drawable/button_icon_speaker"
            android:background="@drawable/button_shape_speak"
            android:paddingRight="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:paddingBottom="70dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/listen_kitty"
            android:layout_marginLeft="30dp"
            android:layout_marginVertical="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="Tiếp tục"
            android:layout_margin="5dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:background="@drawable/button_shape_answers"
            android:textColor="@android:color/holo_red_dark"
            android:onClick="clickToContinue"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:text="Chọn chủ đề khác"
            android:fontFamily="@font/montserrat_semi_bold"
            android:background="@drawable/button_shape_answers"
            android:textColor="@android:color/holo_red_dark"
            android:onClick="clickToChooseNewTopic"/>
    </LinearLayout>


</RelativeLayout>