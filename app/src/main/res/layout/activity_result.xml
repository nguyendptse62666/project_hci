<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:orientation="vertical"
    android:background="@drawable/result_background">

    <TextView
        android:layout_marginTop="20px"
        android:layout_marginLeft="10px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtCategory"
        android:fontFamily="@font/cupcake"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"/>

    <ImageView
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:id="@+id/imageQuestion"
        />

    <TextView
        android:layout_marginLeft="10px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtVietName"
        android:gravity="center"
        android:fontFamily="@font/cupcake"
        android:textColor="#DE7244"
        android:textSize="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/btnResult"
        android:onClick="clickToSpeech"
        android:textColor="#DE7244"
        android:fontFamily="@font/cupcake"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Tiếp tục"
            android:onClick="clickToContinue"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Chọn chủ đề khác"
            android:onClick="clickToChooseNewTopic"/>
    </LinearLayout>
</LinearLayout>