<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseActionActivity"
    android:background="@drawable/blue_cloud_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:paddingTop="10dp">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingLeft="13dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_shape_circle"
            android:onClick="clickToChangeName"
            android:drawableLeft="@drawable/pencil_icon_change_name"
            android:paddingRight="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="55dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cupcake"
            android:text="Xin chào, "
            android:textSize="30dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cupcake"
            android:textSize="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="200dp"
        android:paddingHorizontal="20dp"
        android:id="@+id/btnStudy"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/air_balloon_icon_1"
            android:text="Học vui"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"
            android:paddingBottom="60dp"
            android:paddingTop="45dp"
            android:fontFamily="@font/cupcake"
            android:textStyle="bold"
            android:onClick="clickToStudy"
            android:drawableBottom="@drawable/creativity"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="200dp"
        android:gravity="bottom"
        android:paddingBottom="100dp"
        android:paddingHorizontal="20dp"
        android:id="@+id/btnPlay">
        <Button
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/air_balloon_icon_2"
            android:text="Đố vui"
            android:textColor="@color/colorSkin"
            android:textSize="27dp"
            android:paddingTop="10dp"
            android:paddingBottom="80dp"
            android:fontFamily="@font/cupcake"
            android:onClick="clickToPlay"
            android:drawableTop="@drawable/question"
            />
    </LinearLayout>
</RelativeLayout>