<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayActivity"
    android:orientation="vertical"
    android:id="@+id/layoutPlay">

    <day01.nguyendpt.chidstudy.CustomControl.CoustomTextView
        android:layout_marginTop="20px"
        android:layout_marginHorizontal="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtCategory"
        android:text="Chủ đề"
        android:fontFamily="@font/cupcake"
        android:textColor="@color/colorPrimaryButton"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textStyle="bold"
        app:outerShadowRadius="2dp"
        app:strokeColor="@color/colorWhite"
        app:strokeJoinStyle="bevel"
        app:strokeWidth="2dp"
        />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/imageQuestion"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />
