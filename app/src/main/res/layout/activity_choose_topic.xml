<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ChooseTopicActivity"
    android:orientation="vertical"
    android:background="@drawable/blue_cloud_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cupcake"
            android:text="Xin chào, "
            android:textSize="30dp" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cupcake"
            android:textSize="40dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vui lòng chọn chủ đề để bắt đầu!"
        android:fontFamily="@font/icielpanton_light"
        android:textSize="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_shape_animal"
        android:onClick="clickToChooseAnimalTopic"
        android:text="Con vật (Animals)"
        android:fontFamily="@font/montserrat_semi_bold"
        android:drawableRight="@drawable/button_icon_dog"
        android:paddingRight="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_shape_things"
        android:onClick="clickToChooseThingTopic"
        android:text="Đồ vật (Things)"
        android:fontFamily="@font/montserrat_semi_bold"
        android:drawableRight="@drawable/button_icon_ball"
        android:paddingRight="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape_nature"
        android:onClick="clickToChooseNatureTopic"
        android:text="Thiên nhiên (Nature)"
        android:fontFamily="@font/montserrat_semi_bold"
        android:drawableRight="@drawable/button_icon_sun"
        android:paddingRight="15dp"/>
</LinearLayout>