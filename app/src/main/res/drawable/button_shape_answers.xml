<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/colorDarkYellow"/>
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <item
                android:bottom="5dp"
                >
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="@color/colorPrimaryButton"
                        android:endColor="@color/colorPrimaryButton"
                        android:angle="270" />
                    <corners
                        android:radius="5dp"/>
                    <padding
                        android:left="2dp"
                        android:top="2dp"
                        android:right="2dp"
                        android:bottom="2dp"/>
                    <size
                        android:width="110dp"
                        android:height="40dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/colorPrimaryButton"/>
                    <corners android:radius="5dp"/>

                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5dp">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="@color/colorPrimaryButtonPressed"
                        android:endColor="@color/colorPrimaryButton"
                        android:angle="270" />
                    <corners
                        android:radius="5dp"/>
                    <padding
                        android:left="2dp"
                        android:top="2dp"
                        android:right="2dp"
                        android:bottom="2dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>